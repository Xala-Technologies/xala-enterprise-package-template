# Norwegian Enterprise Package Configuration
# Optimized for government compliance and cross-platform support

# Prevent problematic native builds
optional=true
ignore-scripts=false

# Package management
prefer-frozen-lockfile=false
strict-peer-dependencies=false
auto-install-peers=false

# Performance optimizations
prefer-offline=true
cache-max=604800000
progress=true

# Security
audit-level=moderate

# Norwegian compliance settings
# These packages can cause compilation issues
ignore-dep-walk=iltorb,node-sass,canvas,fsevents
